# base source
export TEST_BASE="@CMAKE_BINARY_DIR@"
source ${TEST_BASE}/test/bin/test-functions


# ------------------------------------------------------------

# init test environment
test_init

# zap previous keys
rm -rf cat_keys.* &> /dev/null

# create keys
${TEST_BASE}/bin/qkd-key-gen --size 1000 --keys 1000 --rate 0.04 --errorbits cat_keys

# truncate previous debug out
echo -n > buffer_debug.alice
echo -n > buffer_debug.bob

# fix pipeline config
cat ${TEST_BASE}/test/test-data/pipeline.conf | grep -v "^cat.alice.url_pipe_out" | grep -v "^cat.bob.url_pipe_out" > buffer.config

echo "cat.alice.url_pipe_out = ipc:///tmp/qkd/buffer.alice.in" >> buffer.config
echo "cat.bob.url_pipe_out = ipc:///tmp/qkd/buffer.bob.in" >> buffer.config

# start two pipelines
PIPELINE_CONFIG="buffer.config"

# start the modules - for the buffer we are using the same keys in the first round
( ${TEST_BASE}/bin/qkd-cat --run --config ${PIPELINE_CONFIG} --file "cat_keys.alice" ) &
( ${TEST_BASE}/bin/qkd-cat --bob --run --config ${PIPELINE_CONFIG} --file "cat_keys.bob" ) &
( ${TEST_BASE}/bin/qkd-buffer --debug --run --config ${PIPELINE_CONFIG} 1> buffer_keys.alice 2>> buffer_debug.alice ) &
( ${TEST_BASE}/bin/qkd-buffer --debug --bob --run --config ${PIPELINE_CONFIG} 1> buffer_keys.bob 2>> buffer_debug.bob ) &

# wait until the modules are up
while [ "$(${TEST_BASE}/bin/qkd-view | grep at.ac.ait.qkd.module.buffer | wc -l)" = "0" ]; do
    echo "waiting for the pipeline to ignite ..."
    sleep 1
done

# wait until all keys have been processed
sleep 1
wait_stalled cat buffer
echo "got keys"

# clean up the generated debug output
grep "^forwarding" buffer_debug.alice > buffer_debug.alice.out
grep "^forwarding" buffer_debug.bob > buffer_debug.bob.out
FILES_LINES=$(echo $(wc -l buffer_debug.alice.out) $(wc -l buffer_debug.bob.out))
if [ "${FILES_LINES}" != "333 buffer_debug.alice.out 333 buffer_debug.bob.out" ]; then
    echo "buffer failed"
    exit 1
fi

# check keys
if [ ! -s buffer_keys.alice ]; then
    echo "alice has not pushed keys"
    exit 1
fi
if [ ! -s buffer_keys.bob ]; then
    echo "bob has not pushed keys"
    exit 1
fi
diff -q buffer_debug.alice.out buffer_debug.bob.out
if [ "$?" != "0" ]; then
    echo "result of qkd-buffer differ"
    exit 1
fi

echo "qkd-buffer works"

# stop machines
test_cleanup

# state that test ok
echo "=== TEST SUCCESS ==="

exit 0
