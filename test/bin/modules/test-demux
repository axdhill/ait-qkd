# base source
export TEST_BASE="@CMAKE_BINARY_DIR@"
source ${TEST_BASE}/test/bin/test-functions


# ------------------------------------------------------------

# init test environment
test_init "test_run/$(basename $0).d"

# zap previous keys
rm -rf cat_keys.* &> /dev/null

# create keys
${TEST_BASE}/bin/qkd-key-gen --silent --size 100 --randomize-size --keys 1000 --rate 0.04 --errorbits cat_keys




test_cleanup

echo "=== TEST SUCCESS ==="
