# base source
export TEST_BASE="@CMAKE_BINARY_DIR@"
source ${TEST_BASE}/test/bin/test-functions

# ------------------------------------------------------------

# init test environment
test_init "$(basename $0).d"

# main
echo "start"
q3pd_start "alice" --debug || exit $?
echo "started"

echo "stop"
q3pd_stop "alice" || exit $?
echo "stopped"

# state that test ok
echo "=== TEST SUCCESS ==="
