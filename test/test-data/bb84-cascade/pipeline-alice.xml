        <log path="qkd-sifting-bb84.alice.log" />
    </module>

    <module path="@CMAKE_BINARY_DIR@/bin/modules/qkd-cascade/qkd-cascade">
        <config path="@CMAKE_BINARY_DIR@/test/test-data/bb84-cascade/pipeline.conf" />
        <role value="alice" />
